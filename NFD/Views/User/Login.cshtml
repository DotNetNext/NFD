@{
    Layout = "~/Views/Shared/_LayoutByLogin.cshtml";
}
@using NFD.BLL
@using COM.Utility
@section head{
    <link href="/Content/Scripts/Plugs/Multiple/parsley/parsley.css" rel="stylesheet"
        type="text/css" />
    <script src="/Content/Scripts/Plugs/Multiple/parsley/parsley.js" type="text/javascript"></script>
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="span12 center login-header">
                <h2>
                    @AppstringManager.GetSystemName</h2>
            </div>
            <!--/span-->
        </div>
        <!--/row-->
        <div class="row-fluid">
            <div class="well span5 center login-box">
                <div class="alert alert-info">
                请输入您的用户名和密码
                </div>
                <form action="/user/LoginSubmit"  class="form-horizontal" action="index.html" method="post">
                <fieldset>
                    <div class="input-prepend" title="Username" data-rel="tooltip">
                        <span class="add-on"><i class="icon-user"></i></span>
                        <input class="input-large span10" name="userName"  tip="必填" reg="^.+$" maxlength="10" type="text" value="@Request["userName"]" />
                    </div>
                    <div class="clearfix">
                    </div>
                    <div class="input-prepend" title="Password" data-rel="tooltip">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        <input class="input-large span10" name="password" tip="必填" reg="^.+$" maxlength="10"
                            type="password" value="" />
                    </div>
                    <div class="clearfix">
                    </div>
                    <p class="center span5">
                        <button type="submit" class="btn btn-primary">
                            登录</button>
                    </p>
                </fieldset>
                </form>
            </div>
            <!--/span-->
        </div>
        <!--/row-->
    </div>
    <!--/fluid-row-->
</div>
