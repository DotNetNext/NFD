    <script>

        //绑定操作
        function action(value, name) {
            var in1 = "<input value='下一步' onclick='createChanceBill(" + value + ")' class='btn btn-mini' type='button' />";
            var in2 = "<input value='作废' onclick='changeStatus(" + value + ",-3)' class='btn btn-mini' type='button' />";
