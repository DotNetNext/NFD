        }
        //绑定操作 重新打样
        function childAction(value, name, rowObject) {

            if ($.valiData.isEmpty(rowObject[0]) || rowObject[0] == false) {
                var inputReHtd = "<input value='重产样衣' onclick='openReSample(" + value + ")' class='btn btn-mini' type='button' />";
