@model SampleDetail
@using COM.Extension
@using NFD.Entities.Data
@using COM.Utility
<style>
    .savetable td
    {
        padding: 5px;
    }
</style>
<form name="FormPost" id="frmSampleSavetable" class="savetable" action="/Htm/Sample/ReSample"
method="post">
<table id="frmSampleSavetable" class="EditTable" cellspacing="0" cellpadding="0" border="0">
    <tbody>
        <tr id="FormError" style="display: none">
            <td class="ui-state-error" colspan="2">
             @Html.HiddenFor(c=>c.samd_id)
             @Html.HiddenFor(c=>c.sam_id)
            </td>
        </tr>
        <tr style="display: none" class="tinfo">
            <td class="topinfo" colspan="2">
            </td>
        </tr>
        <tr rowpos="1" class="FormData" id="tr_bill_code">
            <td class="CaptionTD">
                快件单号
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" id="bill_code" value="@Model.bill_code" name="bill_code" role="textbox" class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
        <tr rowpos="2" class="FormData" id="tr_paper_type">
            <td class="CaptionTD">
                纸型
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" id="paper_type" value="@Model.paper_type" name="paper_type" role="textbox" class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
                <tr rowpos="5" class="FormData" id="tr_necessary_number">
            <td class="CaptionTD">
                面料米数
            </td>
            <td class="DataTD">
                &nbsp;<input type="text"  onblur="$(this).easyValidate(true)" tip="@RegList.MONEY_TIP" reg="@RegList.MONEY_NULL" id="fabric_num" value="@Model.fabric_num.IsNullOrEmpty().IIF("0",Convert.ToDecimal(Model.fabric_num).ToString("n2"))" name="fabric_num" role="textbox"
                    class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
        <tr rowpos="3" class="FormData" id="tr_indication_date">
            <td class="CaptionTD">
                样品指示日
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" class="Wadate FormElement ui-widget-content ui-corner-all"
                    onclick="WdatePicker()" id="indication_date" value="@Model.indication_date.ToDateStr("yyyy-MM-dd")" name="indication_date" role="textbox">
            </td>
        </tr>
        <tr rowpos="4" class="FormData" id="tr_no">
            <td class="CaptionTD">
                尺码
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" id="no" name="no" role="textbox" value="@Model.no" class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
        <tr rowpos="5" class="FormData" id="tr_necessary_number">
            <td class="CaptionTD">
                必要枚数
            </td>
            <td class="DataTD">
                &nbsp;<input type="text"  onblur="$(this).easyValidate(true)" tip="@RegList.MONEY_TIP" reg="@RegList.MONEY_NULL" id="necessary_number" value="@Model.necessary_number" name="necessary_number" role="textbox"
                    class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
        <tr rowpos="6" class="FormData" id="tr_hope_date">
            <td class="CaptionTD">
                样衣寄出日
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" class="Wadate FormElement ui-widget-content ui-corner-all"
                    onclick="WdatePicker()" id="hope_date" value="@Model.hope_date.ToDateStr("yyyy-MM-dd")" name="hope_date" role="textbox">
            </td>
        </tr>
        <tr rowpos="7" class="FormData" id="tr_factory_date">
            <td class="CaptionTD">
                工厂工作日
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" class="Wadate FormElement ui-widget-content ui-corner-all"
                    onclick="WdatePicker()" id="factory_date" value="@Model.factory_date.ToDateStr("yyyy-MM-dd")" name="factory_date" role="textbox">
            </td>
        </tr>
        <tr rowpos="8" class="FormData" id="tr_actual_date">
            <td class="CaptionTD">
                实际工作日
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" class="Wadate FormElement ui-widget-content ui-corner-all"
                    onclick="WdatePicker()" id="actual_date" value="@Model.actual_date.ToDateStr("yyyy-MM-dd")" name="actual_date" role="textbox">
            </td>
        </tr>
        <tr rowpos="9" class="FormData" id="tr_remark">
            <td class="CaptionTD">
                备注
            </td>
            <td class="DataTD">
                &nbsp;<input type="text" id="remark" name="remark" value="@Model.remark" role="textbox" class="FormElement ui-widget-content ui-corner-all">
            </td>
        </tr>
        <tr class="FormData" style="display: none">
            <td class="CaptionTD">
            </td>
            <td colspan="1" class="DataTD">
                <input class="FormElement" id="id_g" type="text" name="agrid_5_t_id" value="12">
            </td>
        </tr>
    </tbody>
</table>
</form>
